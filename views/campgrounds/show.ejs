<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="image-responsive" src="<%= camp.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%= camp.name %></a></h4>
                    <p><%= camp.description %></p>
                    <p><em>Submitted By: <%= camp.author.username%></em></p>
                    <% if(currentUser && camp.author.id.equals(currentUser._id)){%>
                        <a class="btn btn-warning" href="/index/<%= camp._id%>/edit">Edit</a>
                        <form id="delete-form" action="/index/<%=camp._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" 
                    href="/index/<%=camp._id%>/comments/new">
                        Add New Comments
                    </a>
                </div>
                <hr>
                <% camp.comments.forEach(comment => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">
                                10 days ago
                            </span>
                            <p><%= comment.text %></p>
                            <a class="btn btn-xs btn-warning"
                               href="/index/<%=camp._id%>/comments/<%=comment._id%>/edit"
                            >Edit</a>
                        </div>
                    </div>      
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer%>
